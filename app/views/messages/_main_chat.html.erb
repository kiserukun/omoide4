<div class="chat-header">
<div class="left-header">
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
       <%= link_to "削除する", room_path(@room), method: :delete, data: { confirm: '削除してもいいですか?' } %>
    </div>
  </div>
</div>

<div class="messages">
<%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'メッセージ' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :images, multiple: true,class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>